<% if notice != nil %>
  <p id="notice" class="alert alert-success" role="alert">
    <%= notice %>
  </p>
<% end %>

<h1>Listing Locations</h1>

<div class="row">
    <% @locations.each do |location| %>
      <div class="col-md-4">
       <div class="panel panel-default">
        <div class="panel-body">
         <h3><%= location.city %></h3>
         <%= image_tag location, class: "img-responsive" %>
         <div class="btn-group">
          <%= link_to 'Show', location, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_location_path(location), class: "btn btn-success" %>
          <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
         </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Location', new_location_path %>
